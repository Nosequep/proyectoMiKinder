<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050b47"
    android:orientation="vertical"
    tools:context=".LlamadaActivity1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/b_regresar"
            android:layout_width="51dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_navigate_before_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Lectura"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
    <ImageView
        android:layout_width="320dp"
        android:layout_height="340dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/maestra2"
        android:layout_gravity="center"/>
    <!--
    <ImageView
        android:layout_width="344dp"
        android:layout_height="402dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/maestra2" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondeado"
                android:gravity="center">
                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/telefonorojo"
                    android:backgroundTint="@color/white"/>
"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/boton_redondeado"
                android:gravity="center">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/mensaje"
                    android:backgroundTint="@color/azul"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:background="@drawable/rounded_image"
                android:backgroundTint="@color/azul"
                android:src="@drawable/iconos28"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:background="@drawable/rounded_image"
                android:src="@drawable/iconos29"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>